{% extends 'block.html.twig' %}
{% set attributes = attributes.addClass('w-32 py-4') %}

{% block content %}
  {% if site_logo %}
    <a href="{{ path('<front>') }}" rel="home">
      <img src="{{ site_logo }}" alt="{{ 'Home'|t }}" fetchpriority="high" />
    </a>
  {% endif %}
  {% if site_name %}
    <a href="{{ path('<front>') }}" class="sr-only" rel="home">{{ site_name }}</a>
  {% endif %}
  {{ site_slogan }}
{% endblock %}
