{#
/**
 * @file
 * Default theme implementation for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 *
 * @ingroup themeable
 */
#}
{%
  set classes = classes is defined ? classes : [
    'border-2',
    'border-base-300',
    'hover:border-base',
    'rounded',
    'py-2',
    'px-3',
    'text-base',
    'leading-tight',
    'focus:ring',
    'focus:ring-primary-600',
    'focus:ring-offset-2',
    'focus:border-base-300',
    'cursor-auto',
    'transition',
    'w-full',
    'min-w-24',
  ]
%}
{% block input %}
  <input{{ attributes.addClass(classes) }} />{{ children }}
{% endblock %}
