{% extends 'input.html.twig' %}

{%
  set classes = [
    'peer',
    'block',
    'h-6',
    'w-10',
    'cursor-pointer',
    'border-2',
    'border-base-400',
    'hover:border-base-600',
    'rounded-full',
    'bg-base-100',
    'hover:bg-base-100',
    'checked:bg-none',
    'checked:bg-primary-500',
    'checked:border-primary-500',
    'checked:focus:bg-primary-500',
    'checked:focus:border-primary-500',
    'checked:hover:bg-primary-500',
    'checked:hover:border-base-600',
    'focus:ring',
    'focus:ring-primary-600',
    'focus:ring-offset-2',
    'transition',
  ]
%}

{% block input %}
  <div class="relative">
    <input{{ attributes.addClass(classes) }} role="switch" />{{ children }}
    <div class="absolute flex items-center justify-center w-4 h-4 rounded-full pointer-events-none transition bg-base-400 dot left-1 top-1 peer-checked:translate-x-full peer-checked:bg-primary-50">
    </div>
  </div>
{% endblock %}
